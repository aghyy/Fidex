{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "NEXTAUTH_SECRET",
        "NEXTAUTH_URL",
        "FRONTEND_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "SMTP_USER",
        "SMTP_PASSWORD",
        "SMTP_FROM",
        "WEBAUTHN_RP_NAME",
        "WEBAUTHN_RP_ID",
        "NEXT_PUBLIC_BACKEND_URL"
      ]
    }
  }
}